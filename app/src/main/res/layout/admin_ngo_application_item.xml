<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAdminNgoStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="8dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ngoAdminStatusUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Username"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <TextView
                    android:id="@+id/ngoAdminStatusDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Date"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

                <ImageView
                    android:id="@+id/imgAdminNgoStatus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/ngoAdminStatusDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/expand_more"/>

            <!-- Hidden View -->
            <LinearLayout
                android:id="@+id/ngoStatusHiddenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fullname: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/ngoAdminStatusFullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fullname"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/ngoAdminStatusPhoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="phoneNum"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NRIC: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/ngoAdminStatusNric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="nric"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/ngoAdminStatusAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/ngoAdminStatusDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="description"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/ngoAdminStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApprove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Approve"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDecline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Decline"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>