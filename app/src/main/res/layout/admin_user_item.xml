<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminUsersLayout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvAdminUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="8dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adminUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Username"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:layout_gravity="center"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

<!--                <TextView-->
<!--                    android:id="@+id/ngoAdminStatusDate"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="Date"-->
<!--                    android:fontFamily="@font/nunito_sans_semibold"-->
<!--                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>-->
            </LinearLayout>

            <ImageButton
                android:id="@+id/adminUsersDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:src="@drawable/expand_more"/>

            <!-- Hidden View -->
            <LinearLayout
                android:id="@+id/adminUserHiddenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Id: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/adminUserId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="userid"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fullname: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/adminUserFullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fullname"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/adminUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/adminUserType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="type"
                        android:fontFamily="@font/nunito_sans"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: "
                        android:fontFamily="@font/nunito_sans"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/adminUserStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDisable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Disable"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnActivate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Activate"
                        android:visibility="gone"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:text="Delete"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>